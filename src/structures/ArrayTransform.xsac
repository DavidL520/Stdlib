inline
int NormalizeRotateCount( int count, int max_rotate)
{
  /* Normalizer for rotate count */
  z = _aplmod_SxS_( count, max_rotate);
  // z2 = _noteminval_( z, 0);
  //z3 = _notemaxval_( z2, max_rotate);
  return( z);
}

inline
int signum( int y)
{
  if( _eq_SxS_( 0, y)) {
    z = 0;
  } else {
    if( _lt_SxS_( 0, y)) {
      z = 1;
    } else {
      z = _sub_SxS_( 0, 1);
    }
  }
  return( z);
} 

