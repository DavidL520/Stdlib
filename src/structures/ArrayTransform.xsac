#define REDUCE( name, a, fun, neutral)                              \
inline                                                              \
a name( a[*] arr_a)                                                 \
{                                                                   \
  res = with {                                                      \
          ( _mul_SxV_(0,_shape_A_(arr_a)) <= iv < _shape_A_(arr_a) )\
          : _sel_VxA_(iv, arr_a);                                   \
        } : fold( fun, neutral );                                   \
                                                                    \
  return( res);                                                     \
}

