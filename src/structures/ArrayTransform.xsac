/*
 * No overdrop support, as it inhibits AWLF.
 * Hence, overdrops ( e.g., drop( [10], iota( 5))) 
 * can cause segfaults. If this is a problem, compile with -check c.
 * We assume that people do not, in general, write code that
 * produces overdrops.
 *
 */

#define DROP( a)                                                                 \
inline                                                                           \
a[*] drop( int[.] v, a[*] array)                                                 \
{                                                                                \
  shpa = _shape_A_( array);                                                      \
  zr = _mul_VxS_( shpa, 0);                                                      \
  offset = zr;                                                                   \
  /* Pad drop count */                                                           \
  vext = zr;                                                                     \
  /* for-loop will get unrolled */                                               \
  for( i=0; _lt_SxS_( i, _sel_VxA_( [0], _shape_A_( v))); i= _add_SxS_( i, 1)) { \
    el     = _sel_VxA_( [i], v);                                                 \
    shpel  = _sel_VxA_( [i], shpa);                                              \
    vext   = _idx_modarray_AxSxS_( vext,  i,  el);                               \
    val    = _mask_SxSxS_( _le_SxS_( el, 0), 0, el);                             \
    offset = _idx_modarray_AxSxS_( offset, i, val);                              \
  }                                                                              \
  shpz = _sub_VxV_( shpa, _abs_V_( vext));                                       \
  res = with {                                                                   \
          ( . <= iv <= . ) : _sel_VxA_( _add_VxV_( offset, iv), array);          \
        } : genarray( shpz, zero(array));                                        \
  return( res);                                                                  \
}

BUILT_IN( DROP)


